rules_version = '2';

// Firebase Storage 보안 규칙
service firebase.storage {
  match /b/{bucket}/o {
    // calendar-images 폴더: 인증된 사용자만 업로드 가능, 모든 사용자 읽기 가능
    match /calendar-images/{imageId} {
      allow read: if true;  // 누구나 이미지 읽기 가능 (CORS 포함)
      allow write: if request.auth != null  // 인증된 사용자만 업로드
                   && request.resource.size < 5 * 1024 * 1024  // 5MB 제한
                   && request.resource.contentType.matches('image/.*');  // 이미지만 허용
    }

    // images 폴더: 인증된 사용자만 업로드 가능, 모든 사용자 읽기 가능
    match /images/{imageId} {
      allow read: if true;  // 누구나 이미지 읽기 가능 (CORS 포함)
      allow write: if request.auth != null  // 인증된 사용자만 업로드
                   && request.resource.size < 5 * 1024 * 1024  // 5MB 제한
                   && request.resource.contentType.matches('image/.*');  // 이미지만 허용
    }

    // 기타 경로: 인증된 사용자만 접근 가능
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
