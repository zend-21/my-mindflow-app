  // ê³¼ê±° ë‚ ì§œ ì—¬ë¶€ í™•ì¸
  const isPastDate = scheduleData?.isPastDate || false;

  // ==================== ì»¤ìŠ¤í…€ í›… ì´ˆê¸°í™” ====================
  // ì‚¬ìš´ë“œ ê´€ë ¨ í›…
  const {
    soundFile,
    customSoundName,
    volume,
    notificationType,
    snoozeEnabled,
    snoozeMinutes,
    soundFileInputRef,
    setSoundFile,
    setCustomSoundName,
    setVolume,
    setNotificationType,
    setSnoozeEnabled,
    setSnoozeMinutes,
    handleSoundFileChange,
    // handlePlaySound, // ê¸°ì¡´ í•¨ìˆ˜ì™€ ì¶©ëŒ - ê¸°ì¡´ í•¨ìˆ˜ ì‚¬ìš©
    handleRemoveSound,
  } = useAlarmSound();

  // ì•ŒëŒ ë¦¬ìŠ¤íŠ¸ ê´€ë¦¬ í›…
  const {
    registeredAlarms,
    pendingAlarms,
    sortBy,
    sortDirection,
    setRegisteredAlarms,
    setPendingAlarms,
    setSortBy,
    setSortDirection,
    sortAlarms,
    toggleSort,
    findAlarmById,
    deleteAlarm,
    registerPendingAlarm,
    toggleAlarmEnabled,
    updateAlarm,
  } = useAlarmList(scheduleData);

  // ì•ŒëŒ í¼ ê´€ë¦¬ í›…
  const {
    alarmTitle,
    eventTime,
    customDays,
    customHours,
    customMinutes,
    directDate,
    directTime,
    isAnniversary,
    anniversaryName,
    anniversaryRepeat,
    anniversaryTiming,
    anniversaryDaysBefore,
    hourInput,
    minuteInput,
    showOptions,
    showIndividualOptions,
    showRepeatedAnniversaries,
    setAlarmTitle,
    setEventTime,
    setCustomDays,
    setCustomHours,
    setCustomMinutes,
    setDirectDate,
    setDirectTime,
    setIsAnniversary,
    setAnniversaryName,
    setAnniversaryRepeat,
    setAnniversaryTiming,
    setAnniversaryDaysBefore,
    setHourInput,
    setMinuteInput,
    setTimeInputs,
    setShowOptions,
    setShowIndividualOptions,
    setShowRepeatedAnniversaries,
    resetForm,
    resetAnniversaryFields,
  } = useAlarmForm();

  // ì•ŒëŒ ìˆ˜ì • í›…
  const {
    showEditModal,
    editingAlarm,
    editingPendingId,
    editingRegisteredId,
    editTitle,
    editEventTime,
    editOffset,
    editIsAnniversary,
    editAnniversaryRepeat,
    editAnniversaryTiming,
    editAnniversaryDaysBefore,
    showCustomOptions,
    editCustomSound,
    editCustomSoundName,
    editCustomVolume,
    editCustomNotificationType,
    editCustomSnoozeEnabled,
    editCustomSnoozeMinutes,
    hasEditChanges,
    editHourInput,
    editMinuteInput,
    editSoundFileInputRef,
    setShowEditModal,
    setEditingAlarm,
    setEditingPendingId,
    setEditingRegisteredId,
    setEditTitle,
    setEditEventTime,
    setEditOffset,
    setEditIsAnniversary,
    setEditAnniversaryRepeat,
    setEditAnniversaryTiming,
    setEditAnniversaryDaysBefore,
    setShowCustomOptions,
    setEditCustomSound,
    setEditCustomSoundName,
    setEditCustomVolume,
    setEditCustomNotificationType,
    setEditCustomSnoozeEnabled,
    setEditCustomSnoozeMinutes,
    setHasEditChanges,
    setEditHourInput,
    setEditMinuteInput,
    setEditTimeInputs,
    startEditAlarm,
    closeEditModal,
  } = useAlarmEdit();

  // ëª¨ë‹¬ UI í›…
  const {
    showValidationModal,
    validationMessage,
    showDeleteConfirmModal,
    deleteConfirmMessage,
    deleteTargetAlarm,
    deleteTargetType,
    showEditSaveConfirmModal,
    setShowValidationModal,
    setValidationMessage,
    setShowDeleteConfirmModal,
    setDeleteConfirmMessage,
    setDeleteTargetAlarm,
    setDeleteTargetType,
    setShowEditSaveConfirmModal,
    showValidation,
    closeValidationModal,
    // showDeleteConfirmation, // ê¸°ì¡´ í•¨ìˆ˜ì™€ ì¶©ëŒ - ê¸°ì¡´ í•¨ìˆ˜ ì‚¬ìš©
    closeDeleteConfirmModal,
    showEditSaveConfirmation,
    closeEditSaveConfirmModal,
  } = useAlarmModals();

  // ì˜µì…˜ ë²„íŠ¼ ref
  const optionsButtonRef = useRef(null);

  // ë°˜ë³µ ê¸°ë…ì¼ ê³„ì‚°
  const repeatedAnniversaries = useMemo(() => {
    if (!scheduleData?.date) return [];

    try {
      const allSchedulesStr = localStorage.getItem('calendarSchedules_shared');
      if (!allSchedulesStr) return [];

      const allSchedules = JSON.parse(allSchedulesStr);
      return getRepeatedAnniversaries(scheduleData.date, allSchedules);
    } catch (error) {
      console.error('ë°˜ë³µ ê¸°ë…ì¼ ë¡œë“œ ì˜¤ë¥˜:', error);
      return [];
    }
  }, [scheduleData?.date]);

  // ==================== ê¸°ì¡´ state ì œê±°ë¨ - í›…ìœ¼ë¡œ ëŒ€ì²´ ====================
  // useAlarmSound: soundFile, customSoundName, volume, notificationType, snoozeEnabled, snoozeMinutes, soundFileInputRef
  // useAlarmList: registeredAlarms, pendingAlarms, sortBy, sortDirection
  // useAlarmForm: alarmTitle, eventTime, customDays/Hours/Minutes, directDate/Time, isAnniversary, anniversaryName/Repeat/Timing/DaysBefore, hourInput, minuteInput, showOptions, showIndividualOptions, showRepeatedAnniversaries
  // useAlarmEdit: showEditModal, editingAlarm, editingPendingId, editingRegisteredId, editTitle, editEventTime, editOffset, editIsAnniversary, editAnniversary*, editCustom*, hasEditChanges, editHourInput, editMinuteInput, editSoundFileInputRef
  // useAlarmModals: showValidationModal, validationMessage, showDeleteConfirmModal, deleteConfirmMessage, deleteTargetAlarm, deleteTargetType, showEditSaveConfirmModal

  // Detect changes in edit modal
  useEffect(() => {
    if (!editingAlarm) {
      setHasEditChanges(false);
      return;
    }

    const titleChanged = editTitle !== editingAlarm.title;
    const offsetChanged = editOffset.days !== editingAlarm.offset?.days ||
                         editOffset.hours !== editingAlarm.offset?.hours ||
                         editOffset.minutes !== editingAlarm.offset?.minutes;
    const anniversaryChanged = editIsAnniversary !== editingAlarm.isAnniversary;

    // ê¸°ë…ì¼ ê´€ë ¨ ë³€ê²½ì€ ê¸°ë…ì¼ì´ í™œì„±í™”ë˜ì–´ ìˆì„ ë•Œë§Œ ì²´í¬
    const anniversaryRepeatChanged = editIsAnniversary && editAnniversaryRepeat !== (editingAlarm.anniversaryRepeat || '');
    const anniversaryTimingChanged = editIsAnniversary && editAnniversaryTiming !== (editingAlarm.anniversaryTiming || 'today');
    const anniversaryDaysBeforeChanged = editIsAnniversary && editAnniversaryDaysBefore !== (editingAlarm.anniversaryDaysBefore || '');

    // ê°œë³„ ì•ŒëŒì˜µì…˜ ë³€ê²½ ê°ì§€
    const customSoundChanged = editCustomSound !== (editingAlarm.customSound ?? null);
    const customVolumeChanged = editCustomVolume !== (editingAlarm.customVolume ?? null);
    const customNotificationTypeChanged = editCustomNotificationType !== (editingAlarm.customNotificationType ?? null);
    const customSnoozeEnabledChanged = editCustomSnoozeEnabled !== (editingAlarm.customSnoozeEnabled ?? null);
    const customSnoozeMinutesChanged = editCustomSnoozeMinutes !== (editingAlarm.customSnoozeMinutes ?? null);

    const hasChanges = titleChanged || offsetChanged || anniversaryChanged ||
                       anniversaryRepeatChanged || anniversaryTimingChanged || anniversaryDaysBeforeChanged ||
                       customSoundChanged || customVolumeChanged || customNotificationTypeChanged ||
                       customSnoozeEnabledChanged || customSnoozeMinutesChanged;

